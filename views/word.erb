<h1 class="title">You Have Added The Word: <%= @word.name %></h1>
<hr>
<h3>Definitions for the word: <em><%= @word.name %></em></h3>
<br>
  <% if @word.definitions %>
      <% @word.definitions.each do |definition| %>
        <p><a href="/words/<%= @word.id %>/definitions/<%= definition.id %>"><%= definition.name %></a></p>
      <% end %>
  <% else %>
    <p>There are no definitions listed for this word yet.</p>
  <% end %>
<br>
<h4>Add a definition for: <%= @word.name %></h4>
<form action="/words/<%= @word.id %>/definitions" method="post">
  <div class="form-group">
    <input id="definition_name" name="definition_name" class="form-control" type="text">
  </div>
  <button type="submit" class="main-button">Save</button>
</form>
<br>
<p><a href="/words/<%= @word.id %>/edit">Edit word</a></p>
<a href="/words">Return to word list</a>
